h1 {
    text-decoration-line: overline; /*this is text decoration line like overline,underline and line-through and overline underline*/
    text-decoration-color: red; /*this is text decoration color*/
    text-decoration-style: wavy; /*this is text decoration style*/
    text-decoration-thickness: auto; /*this is text decoration thickness*/
}
h2 {
    text-decoration-line: line-through;
    text-decoration-color: aqua;
    text-decoration-thickness: 5px;
}
h3 {
    text-decoration-line: underline;
    text-decoration-color: green;
    text-decoration-thickness: 25%;
}
p {
    text-decoration-line: overline underline;
    text-decoration-color: purple;
}


h1 h2 h3 p {
    text-decoration: underline red double 5px; /*this is shorthand property of text decoration*/
}

a {
    text-decoration: none; /*this none element is used to remove the underline that is usually under links*/
}


p.uppercase {
    text-transform: uppercase; /*this text transform property is to capitalize or put all text in lower case or upper case or to put all first letters in uppercase and other lower case*/
}
p.lowercase {
    text-transform: lowercase;
}
p.capitalize {
    text-transform: capitalize;
}


p {
    text-indent: 50px; /*used to specify the indentation of the first line of a text*/ 
}

h1 {
    letter-spacing: 5px; /*this is used to specify the space between the characters in a text*/
}
h2 {
    letter-spacing: -2px;
    text-shadow: 2px 2px 5px red; /*this property adds shadow to the text, 2px each sides, then you can add color and add a blur effect 5px mostly which comes after the shadow element*/
}

p.small {
    line-height: 0.8; /*this property is used to specify the space between lines*/
}
p.big {
    line-height: 1.8;
}

p.one {
    word-spacing: 10px; /*this is word spacing*/
}


